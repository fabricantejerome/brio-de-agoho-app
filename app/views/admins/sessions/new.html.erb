<h2>Admin</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "block text-center mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full mb-4 rounded-full text-center" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "block text-center mb-2"%>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full mb-4 rounded-full text-center" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class: 'bg-green-500 text-white px-4 py-2 rounded-full w-full' %>
  </div>
<% end %>

<%= render "admins/shared/links" %>
