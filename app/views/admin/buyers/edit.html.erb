<h1 class="text-2xl text-green-800 text-center uppercase font-medium mt-8 mb-4">Update Buyer</h1>

<div class="w-3/4 flex justify-center md:text-end sm:text-center mx-auto ml-8">
  <%= form_with model: [:admin, @admin_buyer], url: "/admin/buyers/#{@admin_buyer.id }" , class: 'space-y-3' do |form| %>
    <% if form.object.errors.any? %>
        <% form.object.errors.full_messages.each do |message| %>
            <div>
                <%= message %>
            </div>
        <% end %>
    <% end %>

    <div class="grid grid-cols-4 w-8/12 ml-28 gap-2 items-center mt-10 auto-cols-min">
      <%= form.label :firstname, class: 'text-end' %>
      <%= form.text_field :firstname, required: true, class: "border-transparent border-b-gray-500 focus:border-transparent focus:border-b-gray-500 focus:ring-transparent col-span-3" %>

      <%= form.label :lastname, class: 'text-end' %>
      <%= form.text_field :lastname, required: true, class: "border-transparent border-b-gray-500 focus:border-transparent focus:border-b-gray-500 focus:ring-transparent col-span-3" %>
    
      <%= form.label :contact_no, class: 'text-end' %>
      <%= form.text_field :contact_no, required: true, class: "border-transparent border-b-gray-500 focus:border-transparent focus:border-b-gray-500 focus:ring-transparent col-span-3" %>
    
      <%= form.label :email, class: 'text-end' %>
      <%= form.email_field :email, required: true, class: "border-transparent border-b-gray-500 focus:border-transparent focus:border-b-gray-500 focus:ring-transparent col-span-3" %>

      <%= form.label :salesperson, class: 'text-end' %>
      <%= form.select :salesperson, ["Salesperson - 1", "Salesperson - 2", "Salesperson - 3"], required: true, class: "border-transparent border-b-gray-500 focus:border-transparent focus:border-b-gray-500 focus:ring-transparent col-span-3" %>
    </div>
    
    <div class="actions text-center">
      <%= link_to 'Back', admin_buyers_path, class: 'border px-4 py-2 mt-2 inline-block rounded' %>
      <%= form.submit "Update", class: "py-2 px-4 bg-green-800 rounded text-white" %>
    </div>
  <% end %>
</div>