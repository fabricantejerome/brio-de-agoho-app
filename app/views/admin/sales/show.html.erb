<div>
    <p>Sales ID: <%= @admin_sale.id %></p>
    <p>Client Name: <%= @admin_sale.affiliate.fullname %></p>
    <p>Referral Code: <%= @admin_sale.ref_code %></p>
    <p>Buyer's Name: <%= @admin_sale.buyer_name %></p>
    <p>Transaction Date: <%= @admin_sale.transaction_date.present? ? @admin_sale.transaction_date.strftime("%B %d, %Y") : '' %></p>
    <p>Payment Method: <%= @admin_sale.payment_method %></p>
    <p>Purchase Share: <%= @admin_sale.purchase_share %></p>
    <p>Amount: <%= @admin_sale.amount %></p>
    <p>Total Amount: <%= @admin_sale.total_amount %></p>
    <p>Payout: <%= @admin_sale.payout %></p>
    <p class="capitalize">Status: <%= @admin_sale.status %></p>

    <%= link_to 'Back', admin_sales_path, class: 'border px-4 py-2 mt-2 inline-block rounded' %>
</div>